@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}
<div class="" xmlns="http://www.w3.org/1999/html">
    <div class="row mb-4 filter-background">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Index", "Home")" class="form-inline mb-4">
                <div class="input-group" style="width: 100%;">
                    <!-- Adjusting width by assigning more space to the input field -->
                    <input type="text" id="searchInput" name="searchString" class="form-control form-control-lg" style="flex-grow: 4;" placeholder="Enter location">

                    <!-- Sorting Buttons -->
                    <div class="input-group-prepend">
                        <a href="@Url.Action("Index", new { searchString = ViewData["CurrentFilter"], sortOrder = ViewData["MinPriceSortParm"] })" class="btn btn-secondary">
                            <i class="bi bi-sort-down"></i>  Price
                        </a>
                        @* <a href="@Url.Action("Index", new { searchString = ViewData["CurrentFilter"], sortOrder = ViewData["MaxPriceSortParm"] })" class="btn btn-secondary"> *@
                        @*     <i class="bi bi-sort-up"></i> Max Price *@
                        @* </a> *@
                    </div>

                    <!-- Search Button -->
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary btn-lg">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<h3><strong>Top Listing</strong></h3><br/>
<div class="row">
    @foreach (var room in Model)
    {
    <div class="col-md-4 mb-4">
        <div class="card h-100" style="border-radius: 8px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
            <div class="position-relative">
                <a href="@Url.Action("Details", "Rooms", new { id = room.RoomId })" style="display: block;">
                    <img src="~/images/@(room.ImageUrl ?? "default.jpg")"
                         class="card-img-top room-img"
                         alt="Room Image" />
                    <div class="overlay-text-bottom">
                        <span class="property-type">@room.PropertyType</span>
                        <span class="location"><i class="bi bi-geo-alt-fill"></i> @(room.Location ?? "Unknown")</span>
                    </div>
                </a>
            </div>
            <div class="card-body d-flex justify-content-between small-text">
                <span class="description text-truncate" title="@room.Description">@room.Capacity</span>
                <span class="price"><strong>Nrs @(room.Price)</strong></span>
            </div>
        </div>
    </div>
    }
</div>


<style>
    .room-img {
        width: 100%;
        height: 350px;
        object-fit: cover;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        box-shadow: none !important;  
    }

    .position-relative {
        position: relative;
    }

    .overlay-text-bottom {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        background: rgba(0,0,0,0.6);
        color: white;
        display: flex;
        justify-content: space-between;
        padding: 6px 12px;
        font-size: 0.9rem;
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
    }

    .property-type, .location {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-body.small-text {
        font-size: 0.8rem;
        color: #555;
        display: flex;
        justify-content: space-between;
        padding: 10px 15px;
    }

    .description {
        flex: 2;
        margin-right: 10px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

         .price {
        flex: 1;
        text-align: right;
        white-space: nowrap;
    }

    .phone i, .price i {
        color: #007bff;
    }

    a {
        text-decoration: none;
    }
</style>