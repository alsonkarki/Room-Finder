@model RoomFinder.ViewModels.RoomViewModel

@{
ViewData["Title"] = "Room Details";
}

<h1>Room Details</h1>

<div>
    <h4>Room</h4>
        <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <div class="d-flex align-items-start">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-10 ">
            <dd>
                <img src="~/images/@Model.ImageUrl" alt="Room Image" width="200" height="200" />
            </dd>
        </div>
    </div>
</div>

<!-- Comments Section -->
<h3>Comments</h3>

<div class="comments-section">
    @foreach (var comment in Model.Comments)
    {
        <div class="comment">
            <p><strong>@comment.UserName</strong> - @comment.CreatedAt.ToShortDateString()</p>
            <p>@comment.Content</p>
            <div class="comment-actions">
                <form asp-action="LikeComment" method="post">
                    <input type="hidden" name="CommentId" value="@comment.CommentId" />
                    <button type="submit" class="btn btn-link">
                        <i class="bi bi-hand-thumbs-up-fill"></i>
                        @if (comment.UserHasLiked)
                        {
                            <span class="liked">Liked</span>
                        }
                        else
                        {
                            <span>Like</span>
                        }
                        <span> (@comment.Likes)</span>
                    </button>
                </form>
            </div>
        </div>
    }
</div>

<!-- Add Comment Form -->
<h3>Add a Comment</h3>
<form asp-action="AddComment" method="post">
    <input type="hidden" name="RoomId" value="@Model.RoomId" />
    <div class="form-group">
        <label for="UserName">Your Name</label>
        <input type="text" class="form-control" id="UserName" name="UserName" required />
    </div>
    <div class="form-group">
        <label for="Content">Your Comment</label>
        <textarea class="form-control" id="Content" name="Content" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Comment</button>
</form>
@if (User.IsInRole("Admin")){
<p>
    <a asp-action="Edit" asp-route-id="@Model.RoomId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
}